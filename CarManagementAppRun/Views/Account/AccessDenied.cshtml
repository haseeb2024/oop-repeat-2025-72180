@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center">
    <h1 class="text-danger">Access Denied</h1>
    <h2 class="text-danger">You do not have permission to access this resource.</h2>
    <p class="lead">Please contact your administrator if you believe this is an error.</p>
    
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Return to Dashboard</a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">Logout</a>
    </div>
</div> 