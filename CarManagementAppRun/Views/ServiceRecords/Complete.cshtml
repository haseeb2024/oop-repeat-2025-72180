@model CarManagementApp.Domain.DTOs.ServiceRecordDto
@{
    ViewData["Title"] = "Complete Service Record";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
    <p class="lead">Role: @ViewBag.UserRole</p>
</div>

<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h5>Complete Service Record</h5>
            </div>
            <div class="card-body">
                @if (Model != null && !Model.IsCompleted)
                {
                    <div class="alert alert-info">
                        <h6>Complete Service Record</h6>
                        <p>Please provide the work description and hours worked to complete this service record.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Car:</dt>
                                <dd class="col-sm-8">@Model.CarRegistrationNumber</dd>

                                <dt class="col-sm-4">Customer:</dt>
                                <dd class="col-sm-8">@Model.CustomerName</dd>

                                <dt class="col-sm-4">Service Date:</dt>
                                <dd class="col-sm-8">@Model.ServiceDate.ToString("yyyy-MM-dd")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Mechanic:</dt>
                                <dd class="col-sm-8">@Model.MechanicName</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning">In Progress</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Complete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Work Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4" placeholder="Describe the work performed..." required></textarea>
                            <small class="form-text text-muted">Provide a detailed description of the work completed</small>
                        </div>
                        
                        <div class="mb-3">
                            <label for="hoursWorked" class="form-label">Hours Worked</label>
                            <input type="number" class="form-control" id="hoursWorked" name="hoursWorked" step="0.5" min="0.1" max="100" required />
                            <small class="form-text text-muted">Enter the number of hours worked (minimum 0.1, maximum 100)</small>
                        </div>

                        <div class="alert alert-warning">
                            <h6>Cost Information:</h6>
                            <ul class="mb-0">
                                <li>€75 per hour (or partial hour)</li>
                                <li>2.5 hours = 3 hours = €225</li>
                                <li>1.5 hours = 2 hours = €150</li>
                                <li>Cost is calculated based on actual hours worked</li>
                            </ul>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Complete Service</button>
                        </div>
                    </form>
                }
                else if (Model != null && Model.IsCompleted)
                {
                    <div class="alert alert-success">
                        <h6>Service Already Completed</h6>
                        <p>This service record has already been completed on @Model.CompletionDate?.ToString("yyyy-MM-dd HH:mm").</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <p>Service record not found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Simple cost calculation
    document.getElementById('hoursWorked').addEventListener('input', function() {
        const hours = parseFloat(this.value) || 0;
        const roundedHours = Math.ceil(hours);
        const cost = roundedHours * 75;
        document.getElementById('estimatedCost').textContent = '€' + cost;
    });
</script> 