@{
    ViewData["Title"] = "My Assigned Services";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
    <p class="lead">Role: @ViewBag.UserRole</p>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>My Assigned Services</h5>
            </div>
            <div class="card-body">
                <p>As a Mechanic, you can view and update your assigned service records.</p>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Assigned Service Records</h5>
                                <p class="card-text">View and update your assigned service records.</p>
                                
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Service ID</th>
                                                <th>Car Registration</th>
                                                <th>Service Date</th>
                                                <th>Status</th>
                                                <th>Hours Worked</th>
                                                <th>Total Cost</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>SR001</td>
                                                <td>ABC123</td>
                                                <td>2025-01-15</td>
                                                <td><span class="badge bg-warning">In Progress</span></td>
                                                <td>2.5</td>
                                                <td>€225</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="1" class="btn btn-sm btn-primary">Update</a>
                                                    <a asp-action="Complete" asp-route-id="1" class="btn btn-sm btn-success">Complete</a>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>SR002</td>
                                                <td>XYZ789</td>
                                                <td>2025-01-16</td>
                                                <td><span class="badge bg-success">Completed</span></td>
                                                <td>3.0</td>
                                                <td>€225</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="2" class="btn btn-sm btn-primary">View</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <div class="mt-3">
                                    <h6>Service Cost Calculation:</h6>
                                    <ul>
                                        <li>€75 per hour (or partial hour)</li>
                                        <li>2.5 hours = 3 hours = €225</li>
                                        <li>3.0 hours = 3 hours = €225</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>
    <a asp-action="Index" class="btn btn-secondary">View All Services</a>
</div> 