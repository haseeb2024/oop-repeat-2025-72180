@model CarManagementApp.Domain.DTOs.CustomerDto
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
    <p class="lead">Role: @ViewBag.UserRole</p>
</div>

<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h5>Delete Customer</h5>
            </div>
            <div class="card-body">
                @if (Model != null)
                {
                    <div class="alert alert-danger">
                        <h6>Are you sure you want to delete this customer?</h6>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@Model.Address</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Cars Owned:</dt>
                                <dd class="col-sm-8">@Model.CarCount</dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.CarCount > 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <strong>Warning:</strong> This customer owns @Model.CarCount car(s). Deleting the customer will also affect their car records.
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <p>Customer not found.</p>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    @if (Model != null)
                    {
                        <form asp-action="Delete" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">
                                Delete Customer
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 