@model IEnumerable<CarManagementApp.Domain.DTOs.CarDto>
@{
    ViewData["Title"] = "Cars";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
    <p class="lead">Role: @ViewBag.UserRole</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Car Management</h5>
                <a asp-action="Create" class="btn btn-success">Create New Car</a>
            </div>
            <div class="card-body">
                <p>This is the car management area. Only Administrators can access this section.</p>
                
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Registration</th>
                                    <th>Make</th>
                                    <th>Model</th>
                                    <th>Year</th>
                                    <th>Color</th>
                                    <th>Owner</th>
                                    <th>Owner Email</th>
                                    <th>Services</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var car in Model)
                                {
                                    <tr>
                                        <td>@car.Id</td>
                                        <td>@car.RegistrationNumber</td>
                                        <td>@car.Make</td>
                                        <td>@car.Model</td>
                                        <td>@car.Year</td>
                                        <td>@car.Color</td>
                                        <td>@car.CustomerName</td>
                                        <td>@car.CustomerEmail</td>
                                        <td>@car.ServiceRecordCount</td>
                                        <td>
                                            @if (car.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info">Details</a>
                                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <p>No cars found. <a asp-action="Create">Create the first car</a></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="mt-3">
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>
</div> 